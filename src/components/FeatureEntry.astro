---
interface Props {
    header: string;
    description: string;
    class?: string;
    icon?: ImageMetadata;
}

const { icon, class: className, header, description } = Astro.props;
---

<div class=`flex ${className}`>
    {
        icon !== undefined && (
            <img
                class='h-8 w-auto mr-2'
                src={icon.src}
                alt={`Entry Icon for ${header}`}
            />
        )
    }
    <div>
        <h1 class='font-semibold text-2xl'>
            {header}
        </h1>
        <p>
            {description}
        </p>
    </div>
</div>
