---
interface Props {
    header: string;
    description: string;
    class?: string;
    iconSrc?: string;
}

const { iconSrc, class: className, header, description } = Astro.props;
---

<div class=`flex ${className}`>
    {
        iconSrc !== undefined && (
            <img
                class='h-8 w-auto mr-2'
                src={iconSrc}
                alt={`Entry Icon for ${header}`}
            />
        )
    }
    <div>
        <h1 class='font-semibold text-2xl'>
            {header}
        </h1>
        <p>
            {description}
        </p>
    </div>
</div>
